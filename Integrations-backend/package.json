{
  "name": "opside-integrations-backend",
  "version": "1.0.0",
  "description": "Opside Integrations Hub Backend with Enhanced Detection & Dispute System",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:detection": "jest enhancedDetection.test.ts",
    "test:enhanced": "jest --testPathPattern=enhanced",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:migrate": "psql -d $DATABASE_URL -f migrations/005_add_dispute_system.sql",
    "db:seed": "ts-node scripts/seed.ts",
    "worker:detection": "ts-node src/services/enhancedDetectionService.ts",
    "worker:dispute": "ts-node src/services/disputeService.ts",
    "health:check": "curl http://localhost:3000/health",
    "health:detection": "curl http://localhost:3000/api/enhanced-detection/queue/stats",
    "health:sync": "curl http://localhost:3000/api/enhanced-sync/health"
  },
  "keywords": [
    "integrations",
    "amazon",
    "stripe",
    "gmail",
    "detection",
    "disputes",
    "automation",
    "sync",
    "typescript",
    "nodejs"
  ],
  "author": "Opside Team",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "@supabase/supabase-js": "^2.38.0",
    "@types/bull": "^3.15.9",
    "aws-sdk": "^2.1489.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "bullmq": "^5.60.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "archiver": "^7.0.1",
    "redis": "^4.6.10",
    "socket.io": "^4.8.1",
    "stripe": "^14.5.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.24",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.19.23",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "optionalDependencies": {
    "puppeteer": "^21.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/opside/integrations-backend.git"
  },
  "bugs": {
    "url": "https://github.com/opside/integrations-backend/issues"
  },
  "homepage": "https://github.com/opside/integrations-backend#readme"
}
