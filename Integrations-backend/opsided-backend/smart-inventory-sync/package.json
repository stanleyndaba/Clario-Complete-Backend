{
  "name": "smart-inventory-sync",
  "version": "2.0.0",
  "description": "Smart inventory synchronization service for Opsided backend with Amazon SP-API integration and intelligent discrepancy detection",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:system": "node test-system.js",
    "test:integration": "node test-integration.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postinstall": "npm run build",
    "docker:build": "docker build -t smart-inventory-sync .",
    "docker:run": "docker run -p 3002:3002 --env-file .env smart-inventory-sync",
    "health:check": "curl -s http://localhost:3002/health | jq .",
    "validate:config": "node -e \"require('./dist/config/config.js').validateConfig()\""
  },
  "keywords": [
    "inventory",
    "sync",
    "opsided",
    "backend",
    "amazon-sp-api",
    "reconciliation",
    "discrepancy-detection",
    "ai-ready"
  ],
  "author": "Opsided Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "knex": "^3.0.1",
    "pg": "^8.11.3",
    "axios": "^1.6.0",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "crypto": "^1.0.1",
    "uuid": "^9.0.1",
    "@aws-sdk/client-s3": "^3.614.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/node-cron": "^3.0.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.2",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@types/jest": "^29.5.8",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/opsided/smart-inventory-sync.git"
  },
  "bugs": {
    "url": "https://github.com/opsided/smart-inventory-sync/issues"
  },
  "homepage": "https://github.com/opsided/smart-inventory-sync#readme"
} 