<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cost Breakdown - {{anomaly_type}}</title>
    <link rel="stylesheet" href="../_styles.css">
</head>
<body class="page-costs">
    <div class="header">
        <h2>Cost Breakdown Analysis</h2>
        <p class="page-number">Page 3 of 5</p>
    </div>

    <div class="content">
        <div class="cost-summary">
            <h3>Total Financial Impact</h3>
            <div class="total-cost">
                <span class="currency">$</span>
                <span class="amount">{{total_impact}}</span>
            </div>
            <p class="cost-description">{{cost_summary_description}}</p>
        </div>

        <div class="cost-breakdown">
            <h3>Detailed Cost Breakdown</h3>
            <table class="cost-table">
                <thead>
                    <tr>
                        <th>Cost Category</th>
                        <th>Description</th>
                        <th>Quantity</th>
                        <th>Unit Cost</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each cost_categories}}
                    <tr class="cost-row">
                        <td>{{category}}</td>
                        <td>{{description}}</td>
                        <td class="quantity">{{quantity}}</td>
                        <td class="unit-cost">${{unit_cost}}</td>
                        <td class="total-cost">${{total_cost}}</td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="subtotal-row">
                        <td colspan="4"><strong>Subtotal</strong></td>
                        <td class="subtotal">${{subtotal}}</td>
                    </tr>
                    {{#if fees_and_charges}}
                    <tr class="fees-row">
                        <td colspan="4"><strong>Fees & Charges</strong></td>
                        <td class="fees">${{fees_and_charges}}</td>
                    </tr>
                    {{/if}}
                    <tr class="grand-total-row">
                        <td colspan="4"><strong>Grand Total</strong></td>
                        <td class="grand-total">${{total_impact}}</td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="cost-justification">
            <h3>Cost Justification</h3>
            {{#each cost_justifications}}
            <div class="justification-item">
                <h4>{{title}}</h4>
                <p>{{explanation}}</p>
                {{#if supporting_data}}
                <div class="supporting-data">
                    <p><strong>Supporting Data:</strong></p>
                    <ul>
                        {{#each supporting_data}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
                {{/if}}
            </div>
            {{/each}}
        </div>

        <div class="recovery-potential">
            <h3>Recovery Potential</h3>
            <div class="recovery-metrics">
                <div class="metric">
                    <span class="metric-label">High Probability Recovery</span>
                    <span class="metric-value">${{high_probability_recovery}}</span>
                </div>
                <div class="metric">
                    <span class="metric-label">Medium Probability Recovery</span>
                    <span class="metric-value">${{medium_probability_recovery}}</span>
                </div>
                <div class="metric">
                    <span class="metric-label">Low Probability Recovery</span>
                    <span class="metric-value">${{low_probability_recovery}}</span>
                </div>
            </div>
            <p class="recovery-notes">{{recovery_notes}}</p>
        </div>

        <div class="action-items">
            <h3>Recommended Actions</h3>
            <ol class="action-list">
                {{#each recommended_actions}}
                <li>
                    <strong>{{action}}</strong>
                    <p>{{description}}</p>
                    {{#if priority}}
                    <span class="priority {{priority_class}}">Priority: {{priority}}</span>
                    {{/if}}
                </li>
                {{/each}}
            </ol>
        </div>
    </div>

    <div class="footer">
        <p>Report ID: {{report_id}} | Total Impact: ${{total_impact}}</p>
    </div>
</body>
</html>






