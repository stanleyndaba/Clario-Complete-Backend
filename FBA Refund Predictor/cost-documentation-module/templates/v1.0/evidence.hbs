<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Evidence Documentation - {{anomaly_type}}</title>
    <link rel="stylesheet" href="../_styles.css">
</head>
<body class="page-evidence">
    <div class="header">
        <h2>Evidence Documentation</h2>
        <p class="page-number">Page 2 of 5</p>
    </div>

    <div class="content">
        <div class="evidence-overview">
            <h3>Evidence Overview</h3>
            <p>{{evidence_summary}}</p>
        </div>

        <div class="timeline-section">
            <h3>Timeline of Events</h3>
            <div class="timeline">
                {{#each timeline_events}}
                <div class="timeline-item">
                    <div class="timeline-date">{{date}}</div>
                    <div class="timeline-content">
                        <h4>{{title}}</h4>
                        <p>{{description}}</p>
                        {{#if evidence_reference}}
                        <p class="evidence-ref">Evidence: {{evidence_reference}}</p>
                        {{/if}}
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

        <div class="evidence-details">
            <h3>Evidence Details</h3>
            {{#each evidence_sections}}
            <div class="evidence-section">
                <h4>{{section_title}}</h4>
                <div class="evidence-content">
                    {{#if description}}
                    <p>{{description}}</p>
                    {{/if}}
                    {{#if data_points}}
                    <ul class="data-points">
                        {{#each data_points}}
                        <li><strong>{{label}}:</strong> {{value}}</li>
                        {{/each}}
                    </ul>
                    {{/if}}
                    {{#if attachments}}
                    <div class="attachments">
                        <p><strong>Supporting Documents:</strong></p>
                        <ul>
                            {{#each attachments}}
                            <li>{{name}} ({{type}})</li>
                            {{/each}}
                        </ul>
                    </div>
                    {{/if}}
                </div>
            </div>
            {{/each}}
        </div>

        <div class="anomaly-indicators">
            <h3>Anomaly Indicators</h3>
            <div class="indicators-grid">
                {{#each anomaly_indicators}}
                <div class="indicator">
                    <span class="indicator-label">{{label}}</span>
                    <span class="indicator-value {{severity_class}}">{{value}}</span>
                </div>
                {{/each}}
            </div>
        </div>
    </div>

    <div class="footer">
        <p>Report ID: {{report_id}} | Evidence SHA256: {{evidence_sha256}}</p>
    </div>
</body>
</html>






